<div class="col">
    <div class="row">
    <% @properties.each do |property| %>
    <div class="col-12 col-md-6 col-lg-4">
        <div class="card">
            
            <%= image(property)%>
            <div class="card-body">
                <h4 class="card-title">
                    <a href="site/<%= property.id %>" title="View Product"><%= property.title %></a>
                </h4>
                <p class="card-text"><%= property.description.html_safe.truncate(90) %></p>
                <div class="row">
                    <div class="col">
                        <p><%= number_to_currency(property.value, unit: "R$", separator: ",", delimiter: "")%></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <a href="site/<%= property.id %>" class="btn btn-success btn-block">Ver</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% end %>

    </div>
</div>