<%= form_with(model: @property, local: true) do |form| %>        
<div class="form-group">
  <div class=" col-xl-12 col-12">
    <%= form.label 'Titulo', class: "text-secondary"  %>
    <%= form.text_field :title, class:"form-control", placeholder:"Digite o título do imóvel",  :required => true %>
  </div>

  <div class=" col-xl-5 col-12">
    <%= form.label 'Valor', class: "text-secondary"  %>
    <%= form.number_field :value, class:"form-control", placeholder:"Digite o valor R$ do imóvel",  :required => true %>
  </div>

  <div class="col-xl-12 col-12">
    <%= form.label 'Descrição', class: "text-secondary" %>
    <%= form.text_area :description,  class:"form-control", placeholder:"Descrição do imóvel", rows: 10 ,  :required => true %>
  </div>

  <div class="col-xl-12 col-12">
    <%= form.label 'Foto', class: "text-secondary" %>
    <div class="custom-file avatar">
      <%= form.file_field :image,  class: 'custom-file-input' %>
      <%= form.label 'Escolher Arquivo', class: 'custom-file-label' %>
    </div>
  </div>

</div>
<div class="form-group">
  <%= form.submit "Cadastrar", class: "btn btn-primary btn-md", data: { disable_with: 'Salvando...'}  %>
</div>
<% end %>