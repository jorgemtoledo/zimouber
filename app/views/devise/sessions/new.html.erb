<section id="cover">
  <div id="cover-caption">
    <div id="container" class="container">
      <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
          <div class="card card-signin my-5">
            <div class="card-body">
              <%= form_for(resource, :html => {:class => "form-signin"}, url: session_path(resource_name)) do |f| %>
              <h3 class="text-center text-secondary">Login</h3>
            <div class="form-group">
              <%= f.label "E-mail", class: "text-secondary" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", :required => true %>
            </div>
            <div class="form-group">
              <%= f.label "Senha", class: "text-secondary" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", :required => true %>
            </div>                        
            <div class="form-group">
              <%= f.submit "Login", class: "btn btn-secondary btn-md" %>
            </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>